<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PhotoHosting" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:navigationBarColor">@color/gray_300</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here. -->
        <!-- Background -->
        <item name="android:textSize">@dimen/standardTextSize</item>
        <!-- Text Size -->
        <item name="android:textColor">@color/black</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.DefaultButtonStyle</item>
        <item name="editTextStyle">@style/Base.Widget.AppCompat.EditText.DefaultEditText</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="LinearLayoutTheme">
        <item name="background">@drawable/rounded_shape</item>
    </style>

    <style name="Widget.MaterialComponents.Button.DefaultButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">300dp</item>
        <item name="cornerRadius">@dimen/large_round</item>
        <item name="strokeColor">@color/gray_100</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/add_comment_background</item>
    </style>

    <style name="Theme.PhotoHosting.CommentsButton"
        parent="Widget.MaterialComponents.Button.DefaultButtonStyle">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="Base.Widget.AppCompat.EditText.DefaultEditText">
        <item name="android:background">@drawable/default_edit_text</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textSize">@dimen/standardTextSize</item>
    </style>

    <style name="HintTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="SubscribeButton">
        <item name="cornerRadius">0dp</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>